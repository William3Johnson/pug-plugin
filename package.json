    "normalize.css": "^8.0.1",
    "prettier": "^2.7.1",
    "responsive-loader": "^3.1.1",
    "sass": "^1.54.9",
    "sass-loader": "^13.0.2",
    "sharp": "^0.31.0",
    "svgo-loader": "^3.0.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "webpack": "^5.74.0",
    "webpack-merge": "^5.8.0"
  }
}
